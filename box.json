{
    "name":"cbcommerce-admin",
    "version":"@build.version@",
    "author":"Ortus Solutions, Corp",
    "location":"https://downloads.ortussolutions.com/ortussolutions/coldbox-modules/cbcommerce-admin/@build.version@/cbcommerce-admin-@build.version@.zip",
    "homepage":"https://cbcommerce.ortusbooks.com",
    "documentation":"https://cbcommerce.ortusbooks.com",
    "repository":{
        "type":"git",
        "URL":"https://github.com/coldbox-modules/cbcommerce-api"
    },
    "bugs":"https://github.com/coldbox-modules/cbcommerce-api/issues",
    "slug":"cbCommerce",
    "shortDescription":"Admin module for the cbCommerce e-commerce platform",
    "description":"Admin module for the cbCommerce e-commerce platform",
    "type":"modules",
    "dependencies":{
        "cfmigrations":"^3.0.6",
        "quick":"^4.2.4",
        "cbsecurity":"^2.15.0",
        "BCrypt":"^3.0.1",
        "coldbox-asset-bag":"^1.0.3",
        "stripecfml":"^1.1.5",
        "cbi18n":"^2.2.0"
    },
    "devDependencies":{
        "mockdatacfc":"^3.0.0+7"
    },
    "installPaths":{
        "quick":"modules/quick/",
        "coldbox-asset-bag":"modules/coldbox-asset-bag/",
        "cfmigrations":"modules/cfmigrations/",
        "cbsecurity":"modules/cbsecurity/",
        "cbvalidation":"modules/cbvalidation/",
        "stripecfml":"modules/stripecfml/",
        "cbjavaloader":"modules/cbjavaloader/",
        "mockdatacfc":"modules/mockdatacfc/",
        "BCrypt":"modules/BCrypt/",
        "cbi18n":"modules/cbi18n/"
    },
    "scripts":{
        "postVersion":"package set location='git@gitlab.ortushq.com:coldbox-modules/cbox-commerce.git#v`package version`'",
        "onRelease":"publish",
        "postPublish":"!git push && !git push --tags",
        "harness:install":"install && cd test-harness && install"
    },
    "ignore":[
        "test-harness"
    ],
    "cfmigrations":{
        "connectionInfo":{
            "password":"${DB_PASSWORD}",
            "connectionString":"${DB_CONNECTIONSTRING}",
            "class":"${DB_CLASS}",
            "username":"${DB_USER}"
        },
        "schema":"${DB_DATABASE}",
        "defaultGrammar":"MySQLGrammar"
    }
}